---
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead title="Art Gallery" />
  <link href="/styles/global.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white text-black">
  <div class="flex justify-center items-center h-screen">
    <div class="flex flex-col items-center">
      <!-- First Painting -->
      <div class="flex mb-12">
        <img alt="Rain, Steam and Speed" class="border" height="420" src="/assets/paintings/Turner_-_Rain,_Steam_and_Speed.jpg" width="520"/>
        <div class="ml-8">
          <p class="text-red-500">Joseph Mallord William Turner</p>
          <p class="text-blue-500">Pluie, Vapeur et Vitesse</p>
          <p class="text-blue-500">1844</p>
          <p class="text-blue-500">Londres</p>
          <p class="text-green-500 italic">National Gallery</p>
          <p class="text-blue-500">91 cm × 121.8 cm</p>
        </div>
      </div>
      <!-- Second Painting -->
      <div class="flex">
        <img alt="La Gare Saint-Lazare" class="border" height="420" src="/assets/paintings/La_Gare_Saint-Lazare_-_Claude_Monet.jpg" width="520"/>
        <div class="ml-8">
          <p class="text-red-500">Claude Monet</p>
          <p class="text-blue-500">La Gare Saint-Lazare</p>
          <p class="text-blue-500">1877</p>
          <p class="text-blue-500">Paris</p>
          <p class="text-green-500 italic">Musée d'Orsay</p>
          <p class="text-blue-500">75 cm × 105 cm</p>
        </div>
      </div>
      <div class="flex mt-8">
        <button class="text-red-500 mr-4">prev</button>
        <div class="flex overflow-x-auto space-x-2">
          <!-- Thumbnails -->
          <img alt="Thumbnail of Rain, Steam and Speed" class="border" height="50" src="/assets/paintings/Turner_-_Rain,_Steam_and_Speed.jpg" width="50"/>
          <img alt="Thumbnail of La Gare Saint-Lazare" class="border" height="50" src="/assets/paintings/La_Gare_Saint-Lazare_-_Claude_Monet.jpg" width="50"/>
        </div>
        <button class="text-red-500 ml-4">next</button>
      </div>
      <div class="mt-4 text-green-500">14/271</div>
      <div class="mt-2 text-blue-500">wall</div>
    </div>
  </div>
</body>
</html>
