---
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead title="Mon musée imaginaire" />
  <link href="/styles/global.css" rel="stylesheet">
  <link href="/styles/new-page.css" rel="stylesheet">
  <link href="/node_modules/@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const paintings = [
        {
          painter: "Claude Monet",
          title: "La Gare Saint-Lazare",
          date: "1877",
          place: "Paris",
          owned_by: "Musée d'Orsay",
          size: "75 cm × 105 cm",
          image: "/assets/paintings/La_Gare_Saint-Lazare_-_Claude_Monet.jpg"
        },
        {
          painter: "Joseph Mallord William Turner",
          title: "Pluie, Vapeur et Vitesse",
          date: "1844",
          place: "Londres",
          owned_by: "National Gallery",
          size: "91 cm × 121.8 cm",
          image: "/assets/paintings/Turner_-_Rain,_Steam_and_Speed.jpg"
        },
        {
          painter: "Nouvelle Peinture",
          title: "Titre de la nouvelle peinture",
          date: "2024",
          place: "Lieu",
          owned_by: "Collection",
          size: "Dimensions",
          image: "/assets/paintings/new-painting.jpg"
        }
      ];

      let currentIndex = 0;

      function showPainting(index) {
        const painting = paintings[index];
        if (painting) {
          const paintingImage = document.getElementById('painting-image') as HTMLImageElement;
          const painter = document.getElementById('painter');
          const title = document.getElementById('title');
          const date = document.getElementById('date');
          const place = document.getElementById('place');
          const ownedBy = document.getElementById('owned_by');
          const size = document.getElementById('size');

          if (paintingImage) {
            paintingImage.src = painting.image;
            paintingImage.alt = painting.title;
          }
          if (painter) {
            painter.innerText = painting.painter;
          }
          if (title) {
            title.innerText = painting.title;
          }
          if (date) {
            date.innerText = painting.date;
          }
          if (place) {
            place.innerText = painting.place;
          }
          if (ownedBy) {
            ownedBy.innerText = painting.owned_by;
          }
          if (size) {
            size.innerText = painting.size;
          }

          currentIndex = index;
        }
      }

      function nextPainting() {
        const nextIndex = (currentIndex + 1) % paintings.length;
        showPainting(nextIndex);
      }

      function prevPainting() {
        const prevIndex = (currentIndex - 1 + paintings.length) % paintings.length;
        showPainting(prevIndex);
      }

      showPainting(currentIndex);

      const nextButton = document.getElementById('next-button');
      const prevButton = document.getElementById('prev-button');
      const thumbnail0 = document.getElementById('thumbnail-0');
      const thumbnail1 = document.getElementById('thumbnail-1');
      const thumbnail2 = document.getElementById('thumbnail-2');

      if (nextButton) {
        nextButton.addEventListener('click', nextPainting);
      }
      if (prevButton) {
        prevButton.addEventListener('click', prevPainting);
      }
      if (thumbnail0) {
        thumbnail0.addEventListener('click', () => showPainting(0));
      }
      if (thumbnail1) {
        thumbnail1.addEventListener('click', () => showPainting(1));
      }
      if (thumbnail2) {
        thumbnail2.addEventListener('click', () => showPainting(2));
      }
    });
  </script>
</head>
<body class="bg-white text-black">
  <div class="flex justify-center items-center h-screen flex-col custom-container">
    <h1 class="text-2xl font-bold mb-8">Mon musée imaginaire</h1>
    <div class="flex flex-col items-center">
      <div class="flex">
        <img id="painting-image" alt="Abstract painting with various colors and shapes" class="border" height="420" width="520"/>
        <div class="ml-8">
          <p class="text-red-500" id="painter">Painter</p>
          <p class="text-blue-500" id="title">Title</p>
          <p class="text-blue-500" id="date">Date</p>
          <p class="text-blue-500" id="place">Place</p>
          <p class="text-green-500 italic" id="owned_by">Owned By</p>
          <p class="text-blue-500" id="size">Size</p>
        </div>
      </div>
      <div class="flex mt-8">
        <button id="prev-button" class="text-red-500 mr-4">prev</button>
        <div class="flex overflow-x-auto space-x-2">
          <!-- Thumbnails -->
          <img id="thumbnail-0" alt="Thumbnail of La Gare Saint-Lazare" class="border cursor-pointer" height="50" src="/assets/paintings/La_Gare_Saint-Lazare_-_Claude_Monet.jpg" width="50"/>
          <img id="thumbnail-1" alt="Thumbnail of Pluie, Vapeur et Vitesse" class="border cursor-pointer" height="50" src="/assets/paintings/Turner_-_Rain,_Steam_and_Speed.jpg" width="50"/>
          <img id="thumbnail-2" alt="Thumbnail of new painting" class="border cursor-pointer" height="50" src="/assets/paintings/new-painting.jpg" width="50"/>
        </div>
        <button id="next-button" class="text-red-500 ml-4">next</button>
      </div>
      <div class="mt-4 text-green-500">14/271</div>
    </div>
  </div>
</body>
</html>
