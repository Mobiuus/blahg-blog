---
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead title="Art Gallery" />
  <link href="/styles/global.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const paintings = [
        {
          painter: "Joseph Mallord William Turner",
          title: "Pluie, Vapeur et Vitesse",
          date: "1844",
          place: "Londres",
          owned_by: "National Gallery",
          size: "91 cm × 121.8 cm",
          image: "/assets/paintings/Turner_-_Rain,_Steam_and_Speed.jpg"
        },
        {
          painter: "Claude Monet",
          title: "La Gare Saint-Lazare",
          date: "1877",
          place: "Paris",
          owned_by: "Musée d'Orsay",
          size: "75 cm × 105 cm",
          image: "/assets/paintings/La_Gare_Saint-Lazare_-_Claude_Monet.jpg"
        }
      ];

      let currentIndex = 0;

      function showPainting(index) {
        const painting = paintings[index];
        const paintingImage = document.getElementById('painting-image') as HTMLImageElement;
        const painter = document.getElementById('painter');
        const title = document.getElementById('title');
        const date = document.getElementById('date');
        const place = document.getElementById('place');
        const ownedBy = document.getElementById('owned_by');
        const size = document.getElementById('size');

        if (paintingImage) paintingImage.src = painting.image;
        if (painter) painter.innerText = painting.painter;
        if (title) title.innerText = painting.title;
        if (date) date.innerText = painting.date;
        if (place) place.innerText = painting.place;
        if (ownedBy) ownedBy.innerText = painting.owned_by;
        if (size) size.innerText = painting.size;
        currentIndex = index;
      }

      function nextPainting() {
        const nextIndex = (currentIndex + 1) % paintings.length;
        showPainting(nextIndex);
      }

      showPainting(currentIndex);

      const nextButton = document.getElementById('next-button');
      const thumbnail0 = document.getElementById('thumbnail-0');
      const thumbnail1 = document.getElementById('thumbnail-1');

      if (nextButton) nextButton.addEventListener('click', nextPainting);
      if (thumbnail0) thumbnail0.addEventListener('click', () => showPainting(0));
      if (thumbnail1) thumbnail1.addEventListener('click', () => showPainting(1));
    });
  </script>
</head>
<body class="bg-white text-black">
  <div class="flex justify-center items-center h-screen">
    <div class="flex flex-col items-center">
      <div class="flex">
        <div class="mr-8">
          <p class="text-red-500" id="painter"></p>
          <p class="text-blue-500" id="title"></p>
          <p class="text-blue-500" id="date"></p>
          <p class="text-blue-500" id="place"></p>
          <p class="text-green-500 italic" id="owned_by"></p>
          <p class="text-blue-500" id="size"></p>
        </div>
        <img id="painting-image" class="border" height="420" width="520" alt="Painting"/>
      </div>
      <div class="flex mt-8">
        <button id="next-button" class="text-red-500 mr-4">next</button>
        <div class="flex overflow-x-auto space-x-2">
          <!-- Thumbnails -->
          <img id="thumbnail-0" alt="Thumbnail of Rain, Steam and Speed" class="border cursor-pointer" height="50" src="/assets/paintings/Turner_-_Rain,_Steam_and_Speed.jpg" width="50"/>
          <img id="thumbnail-1" alt="Thumbnail of La Gare Saint-Lazare" class="border cursor-pointer" height="50" src="/assets/paintings/La_Gare_Saint-Lazare_-_Claude_Monet.jpg" width="50"/>
        </div>
      </div>
      <div class="mt-4 text-green-500">14/271</div>
    </div>
  </div>
</body>
</html>
