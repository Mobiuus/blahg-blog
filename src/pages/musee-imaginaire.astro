---
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead />
  <link href="/styles/global.css" rel="stylesheet">
  <link href="/node_modules/@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const paintings = [
        {
          painter: "Claude Monet",
          title: "La Gare Saint-Lazare",
          date: "1877",
          place: "Paris",
          owned_by: "Musée d'Orsay",
          image: "/assets/paintings/La_Gare_Saint-Lazare_-_Claude_Monet.jpg"
        },
        {
          painter: "Joseph Mallord William Turner",
          title: "Pluie, Vapeur et Vitesse",
          date: "1844",
          place: "Londres",
          owned_by: "National Gallery",
          image: "/assets/paintings/Turner_-_Rain,_Steam_and_Speed.jpg"
        },
        {
          painter: "Claude Monet",
          title: "La Pie",
          date: "1868",
          place: "Paris",
          owned_by: "Musée d'Orsay",
          image: "/assets/paintings/Claude_Monet_-_La_pie.jpg"
        }
      ];

      let currentIndex = 0;

      function showPainting(index) {
        const painting = paintings[index];
        if (painting) {
          const paintingImage = document.getElementById('painting-image') as HTMLImageElement;
          const title = document.getElementById('title');
          const painterAndDate = document.getElementById('painter-and-date');
          const placeAndOwnedBy = document.getElementById('place-and-owned-by');
          const paintingIndex = document.getElementById('painting-index');

          if (paintingImage) {
            paintingImage.src = painting.image;
            paintingImage.alt = painting.title;
          }
          if (title) {
            title.innerText = painting.title;
          }
          if (painterAndDate) {
            painterAndDate.innerText = `${painting.painter}, ${painting.date}`;
          }
          if (placeAndOwnedBy) {
            placeAndOwnedBy.innerText = `${painting.place}, ${painting.owned_by}`;
          }
          if (paintingIndex) {
            paintingIndex.innerText = `${index + 1}/${paintings.length}`;
          }

          currentIndex = index;
        }
      }

      function nextPainting() {
        const nextIndex = (currentIndex + 1) % paintings.length;
        showPainting(nextIndex);
      }

      function prevPainting() {
        const prevIndex = (currentIndex - 1 + paintings.length) % paintings.length;
        showPainting(prevIndex);
      }

      showPainting(currentIndex);

      const nextButton = document.getElementById('next-button');
      const prevButton = document.getElementById('prev-button');
      const thumbnail0 = document.getElementById('thumbnail-0');
      const thumbnail1 = document.getElementById('thumbnail-1');
      const thumbnail2 = document.getElementById('thumbnail-2');

      if (nextButton) {
        nextButton.addEventListener('click', nextPainting);
      }
      if (prevButton) {
        prevButton.addEventListener('click', prevPainting);
      }
      if (thumbnail0) {
        thumbnail0.addEventListener('click', () => showPainting(0));
      }
      if (thumbnail1) {
        thumbnail1.addEventListener('click', () => showPainting(1));
      }
      if (thumbnail2) {
        thumbnail2.addEventListener('click', () => showPainting(2));
      }
    });
  </script>
  <style>
    .navigation-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      margin-top: 1rem; /* Add some space between the thumbnails and the navigation bar */
    }
    .centered {
      flex-grow: 1;
      text-align: center;
    }
    .description p {
      line-height: 1.2; /* Adjust this value to reduce/increase line spacing */
    }
    .title-center {
      text-align: center;
    }
  </style>
</head>
<body class="bg-white text-black">
  <div class="flex justify-center items-center h-screen flex-col custom-container">
    <!-- <h1 class="text-2xl font-bold mb-8 title-center">Mon musée imaginaire</h1> -->
    <div class="flex flex-col items-center">
      <div class="flex flex-col items-center">
        <img id="painting-image" alt="Abstract painting with various colors and shapes" class="border mb-4" height="420" width="520"/>
        <div class="description text-center">
          <p class="text-blue-500 title" id="title">Title</p>
          <p class="text-red-500 artist" id="painter-and-date">Painter, Date</p>
          <p class="text-green-500 italic location" id="place-and-owned-by">Place, Owned By</p>
        </div>
      </div>
      <div class="flex overflow-x-auto space-x-2 mt-8">
        <!-- Thumbnails -->
        <img id="thumbnail-0" alt="Thumbnail of La Gare Saint-Lazare" class="border cursor-pointer" height="50" src="/assets/paintings/La_Gare_Saint-Lazare_-_Claude_Monet.jpg" width="50"/>
        <img id="thumbnail-1" alt="Thumbnail of Pluie, Vapeur et Vitesse" class="border cursor-pointer" height="50" src="/assets/paintings/Turner_-_Rain,_Steam_and_Speed.jpg" width="50"/>
        <img id="thumbnail-2" alt="Thumbnail of La Pie" class="border cursor-pointer" height="50" src="/assets/paintings/Claude_Monet_-_La_pie.jpg" width="50"/>
      </div>
      <div class="navigation-bar mt-4">
        <button id="prev-button" class="bg-transparent text-white border border-white py-2 px-4">prev</button>
        <div id="painting-index" class="text-white centered"></div>
        <button id="next-button" class="bg-transparent text-white border border-white py-2 px-4">next</button>
      </div>
    </div>
  </div>
</body>
</html>
