---
import Layout from "../components/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

// Définition des quêtes
const leftColumnQuests = [
  { text: "Introduction to history of art - Ecole du Louvre", status: "doing" },
  { text: "Learn to sail", status: "notdone" },
  { text: "Living abroad", status: "notdone" },
  { text: "Sometimes write blog post", status: "doing" },
  { text: "Read The Brothers Karamazov", status: "notdone" }
];

const rightColumnQuests = [
  { text: "Copenhagen", status: "done" },
  { text: "Berlin", status: "notdone" },
  { text: "Vienne", status: "notdone" },
  { text: "Prague", status: "notdone" },
  { text: "Budapest", status: "notdone" }
];

// Couleurs pour les spans
const colors = ["red", "yellow", "blue", "green"];
---

<Layout title={`Side Quests | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
  <main>
    <div class="side-quests-container">
      <div class="quests-columns">
        <div class="quests-list">
          {leftColumnQuests.map((quest, index) => (
            <div class={`quest-item status-${quest.status}`}>
              {quest.status === "done" ? 
                <del>{quest.text}</del> : 
                (quest.status === "doing" ? 
                  <span class={colors[index % colors.length]}>{quest.text}</span> : 
                  quest.text
                )
              }
            </div>
          ))}
        </div>
        
        <div class="quests-list">
          <div class="quest-header">Next train trip:</div>
          {rightColumnQuests.map((quest, index) => (
            <div class={`quest-item status-${quest.status}`}>
              {quest.status === "done" ? 
                <del>{quest.text}</del> : 
                (quest.status === "doing" ? 
                  <span class={colors[(index + leftColumnQuests.length) % colors.length]}>{quest.text}</span> : 
                  quest.text
                )
              }
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .side-quests-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 0;
  }
  
  .quests-columns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }
  
  .quests-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .quest-header {
    margin-bottom: 0.5rem;
    font-weight: normal;
  }
  
  .quest-item {
    line-height: 1.5;
  }
  
  .status-done {
    color: #666; /* Même gris que "Here's my most recent posts" */
    text-decoration: line-through;
  }
  
  /* Couleurs pour les spans */
  span.red {
    color: var(--red);
  }
  
  span.yellow {
    color: var(--yellow);
  }
  
  span.blue {
    color: var(--blue);
  }
  
  span.green {
    color: var(--green);
  }
  
  /* Responsive */
  @media (max-width: 600px) {
    .quests-columns {
      grid-template-columns: 1fr;
    }
  }
</style>