---
import ChakraWrapper from './ChakraWrapper.astro';
import ColorScript from './ColorScript.astro';
import BaseHead from './BaseHead.astro';
const { title, description } = Astro.props;
---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <ChakraWrapper>
      <header>
        <!-- Your header content -->
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <!-- Your footer content -->
      </footer>
    </ChakraWrapper>
    <ColorScript />
  </body>
</html>