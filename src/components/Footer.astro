---
const today = new Date();
---
<footer>
    <div class="footer-content">
        <div class="email-button-container">
            <button id="email-button" class="email-button">
                <div class="icon">
                    <svg viewBox="0 0 24 24" width="16" height="16">
                        <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z" fill="currentColor"/>
                    </svg>
                </div>
                <span id="button-text">E-Mail Valentin</span>
            </button>
        </div>
        
        <div class="copyright">
            &copy; 2025 Valentin Courtaud. <a href="https://github.com/cassidoo/blahg">This blog is open source</a>!
        </div>
    </div>
</footer>

<script>
    // Function to handle the email button click
    document.addEventListener('DOMContentLoaded', () => {
        const emailButton = document.getElementById('email-button');
        const buttonText = document.getElementById('button-text');
        const emailAddress = 'valentin.courtaud@protonmail.com';
        
        if (emailButton) {
            emailButton.addEventListener('click', async () => {
                // Copy email to clipboard
                try {
                    await navigator.clipboard.writeText(emailAddress);
                    
                    // Change button text to "Copied!"
                    if (buttonText) {
                        buttonText.textContent = 'Copied!';
                        
                        // Reset text after 2 seconds
                        setTimeout(() => {
                            buttonText.textContent = 'E-Mail Valentin';
                        }, 2000);
                    }
                    
                    // Open mail client
                    window.location.href = `mailto:${emailAddress}`;
                } catch (err) {
                    console.error('Failed to copy email: ', err);
                    // If copy fails, just open the mail client
                    window.location.href = `mailto:${emailAddress}`;
                }
            });
        }
    });
</script>

<style>
    footer {
        padding: 25px;
        text-align: center;
        font-size: 0.8rem;
    }
    
    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }
    
    .copyright a {
        text-decoration: underline;
        text-decoration-thickness: 0.1ex;
        text-underline-offset: 0.1ex;
    }
    
    .email-button-container {
        margin-bottom: 10px;
        width: 100%;
        display: flex;
        justify-content: center;
    }
    
    .email-button {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 8px 24px;
        background-color: var(--background-color);
        color: var(--text-color);
        border-radius: 6px;
        border: 1px solid var(--text-color);
        text-decoration: none;
        font-size: 0.8rem;
        font-weight: 600;
        transition: background-color 0.2s, color 0.2s;
        cursor: pointer;
        min-width: 200px;
        height: 32px;
        white-space: nowrap;
    }
    
    .email-button:hover {
        background-color: var(--text-color);
        color: var(--background-color);
    }
    
    .email-button .icon {
        margin-right: 8px;
        display: flex;
        align-items: center;
    }
    
    @media (min-width: 768px) {
        .footer-content {
            flex-direction: column;
            align-items: center;
        }
        
        .email-button {
            min-width: 220px;
        }
    }
</style>